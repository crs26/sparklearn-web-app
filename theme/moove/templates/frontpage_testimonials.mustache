{{!
    @template theme_moove/frontpage_testimonials

    Blocks drawer template
}}
    <div id="page-testimonial" class="frontpage-testimonial">
        <div class="container mt-5">
            <div class="testimonial-header">
                <h4 class="text-center">LET'S HEAR IT FROM THEM</h4>
                <h2 class="text-center ml-auto">TESTIMONIALS</h2>
            </div>
            <div>
                <div class="col-md-12 mentors_col">
                    <div class="mentor_def owl-carousel">
                        <div class="mentor_item">
                            <div class="card">
                    <div class="card-body marketing-item">
                        <img src="{{{ marketing1icon }}}" />
                        <h2>{{{ marketing1heading }}}</h2>
                        <h3>{{{ marketing1subheading }}}</h3>
                        <p>{{{ marketing1content }}}</p>
                        {{#marketing1url}}<a class="btn btn-primary" href="{{{ marketing1url }}}">{{#str}}readmore, theme_moove{{/str}}</a>{{/marketing1url}}
                    </div>
                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
