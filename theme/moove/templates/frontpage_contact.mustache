{{!
    @template theme_moove/frontpage_contact

    Blocks drawer template
}}

<div id="page-contact" class="frontpage-contact">
        <div class="container mt-5">
            <div class="row">
                <div class="col-5 ml-5">
                        <h4>Connect With Us</h4>
                        <form>
                                <input type="text" placeholder="Name (Optional)">
                                <input type="email" placeholder="Email Address (Required)">
                                <textarea class="mt-2" type="textarea" placeholder="Write your message here"></textarea>
                                <button class="new-btn d-block float-right mr-2">Send</button>
                        </form>
                </div>
                <div class="col-6 newsletter pl-4">
                    <h4>Subscribe to our Newsletter</h4>
                    <form>
                        <input type="email" placeholder="Email Address">
                        <h5>By clicking Submit, you agree to our Terms and that you have read our Privacy Policy, including our Cookie use.</h5>
                         <button class="new-btn d-block float-right">Submit</button>
                    </form>
                </div>
            </div>
        </div>
</div>
