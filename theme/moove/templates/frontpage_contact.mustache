{{!
    @template theme_moove/frontpage_contact

    Blocks drawer template
}}

<div id="page-contact" class="frontpage-contact">
        <div class="container my-3">
            <div class="row">
                <div class="col-lg-6 px-5 py-3">
                    <h4>Connect With Us</h4>
                    <form>
                        <div class="row">
                            <input class="col-12 col-sm-6 my-1" type="text" placeholder="Name (Optional)">
                            <input class="col-12 col-sm-6 my-1" type="email" placeholder="Email Address (Required)">
                        </div>
                        <div class="row">
                            <textarea class="col-12 my-1" type="textarea" placeholder="Write your message here"></textarea>
                        </div>
                        <div class="row">
                            <button class="col-4 new-btn d-block float-right my-1">Send</button>
                        </div>
                    </form>
                </div>
                <div class="col-lg-6 px-5 py-3 newsletter">
                    <div class="row">
                        <h4>Subscribe to our Newsletter</h4>
                    </div>
                    <form>
                        <div class="row">
                            <input class="col-12 my-1" type="email" placeholder="Email Address">
                        </div>
                        <div class="row">
                            <h5 class="ml-1">By clicking Submit, you agree to our <span class="blue-80">Terms</span> and that you have read our <span class="blue-80">Privacy Policy</span>, including our <span class="blue-80">Cookie use.</span></h5>
                        </div>
                        <div class="row">
                            <button class="col-4 new-btn d-block float-right">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</div>
